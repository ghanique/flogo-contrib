{
  "name": "ghanique-rest",
  "type": "flogo:activity",
  "ref": "github.com/ghanique/flogo-contrib/activity/rest2",
  "version": "0.0.2",
  "title": "REST GH",
  "description": "Simple REST Activity",
  "homepage": "https://github.com/ghanique/flogo-contrib/tree/master/activity/rest2",
  "input":[
    {
      "name": "method",
      "type": "string",
      "required": true,
      "allowed" : ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    {
      "name": "uri",
      "type": "string",
      "required": true
    },
    {
      "name": "proxy",
      "type": "string",
      "required": false
    },
    {
      "name": "pathParams",
      "type": "params"
    },
    {
      "name": "queryParams",
      "type": "params"
    },
    {
      "name": "header",
      "type": "params"
    },
    {
      "name": "skipSsl",
      "type": "boolean",
      "value": false
    },
    {
      "name": "content",
      "type": "any"
    }
  ],
  "output": [
    {
      "name": "result",
      "type": "any"
    },
    {
      "name": "status",
      "type": "integer"
    }
  ]
}
